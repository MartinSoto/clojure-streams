<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date{ISO8601} [%thread] %-5level %logger{60} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="org.apache.kafka" level="warn" />

  <root level="info">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
