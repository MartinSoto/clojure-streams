#!/usr/bin/env bash

COMPOSE_SERVICE=kafkacat

cnt_name=kafkacat.$$

start_container() {
    docker-compose run \
           --name $cnt_name \
           --rm \
           -e USER_UID=$(id -u) \
           -e USER_GID=$(id -g) \
           -e USER_DIR=$HOME \
           -e USER_NAME=$(whoami) \
           $COMPOSE_SERVICE \
           "$@"
}

kill_container() {
    docker kill $cnt_name 2> /dev/null
}

trap kill_container EXIT

start_container "$@"
